<body>
  <div class="card justify-content-center align-items-center">
    <form action="/user/login" method="POST">
      <div class="mb-3">
        <label for="inputUsername" class="form-label">Username</label>
        <input name="username" type="text" class="form-control" id="inputUsername" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="inputPassword" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" id="inputPassword">
      </div>
      <button type="submit" class="submit btn btn-primary">Login</button>
      <a href="http://localhost:3000/">
        <button type="button" class="back btn btn-light">back</button>
      </a>
    </form>
  </div>
    

